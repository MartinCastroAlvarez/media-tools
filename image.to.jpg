#!/bin/bash
#  -------------------------------------------------------------
# Purpose:
# Converting to JPG
#
# Installation:
# >>> source sudo yum -y install youtube -dl
# >>> source sudo yum -y install ffmpeg ffmpeg-devel
#
# Usage:
# >>> image.to.jpg a.heic
# -------------------------------------------------------------
source args.parse $@
source args.require.file "INPUT"
source args.require "OUTPUT" "$(echo.hash "${INPUT}-jpg").jpg"
if [ ! -f "${OUTPUT}" ]
then
    convert "${INPUT}" "${OUTPUT}"
    if [ "$?" != "0" ]
    then
        echo.error "Failed to process image!"
        exit 3
    fi
fi
echo "${OUTPUT}"
